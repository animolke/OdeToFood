@using  OdeToFood.Core
@model Restaurant

<div class="card">
    <div class="card-header">
        <h3>@Model.Name</h3>
    </div>
    <div class="card-body">
        <span>Location: @Model.Location</span>
        <span>Cuisine: @Model.Cuisine</span>
    </div>
    <div class="card-footer">
        <a asp-page="./Details" asp-route-RestaurantId="@Model.Id" class="btn btn-info">Details</a>
        <a asp-page="./Edit" asp-route-RestaurantId="@Model.Id" class="btn btn-primary">Edit</a>
        <a asp-page="./Delete" asp-route-RestaurantId="@Model.Id" class="btn btn-primary">Delete</a>
    </div>
</div>